<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.practice2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu2"
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/submain2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@android:color/holo_blue_bright"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="121dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.30"
                    app:srcCompat="@drawable/per3" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"

                    android:layout_weight="0.82"
                    android:text="Big boss!!!!!"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                   />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/avai"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.03"
                android:background="@drawable/acbord"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iconn"
                    android:layout_width="72dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp"
                    app:srcCompat="@drawable/dot" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="10dp"
                    android:text="Available"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="70dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/account" />

                <TextView
                    android:id="@+id/accounttxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="View account"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="24sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="71dp"
                android:text="Skype credit"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/roow4"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/skype" />

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="$17.00"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="24sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="71dp"
                android:text="Skype number"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/row5"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="73dp"
                    android:layout_height="49dp"
                    app:srcCompat="@drawable/phone" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="87021151269"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="71dp"
                android:layout_weight="0.21"
                android:text="Call forwarding"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/last"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="72dp"
                    android:layout_height="49dp"
                    app:srcCompat="@drawable/direct" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.35"
                    android:text="Inactive"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/radiobutton"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/first"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_weight="0.18"
                android:background="@android:color/background_light"
                android:buttonTint="@android:color/holo_blue_light"/>

            <RadioButton
                android:id="@+id/second"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_weight="0.17"
                android:background="@android:color/background_light"
                android:buttonTint="@android:color/holo_blue_light"/>

            <RadioButton
                android:id="@+id/third"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@android:color/background_light"
                android:buttonTint="@android:color/holo_blue_light"/>
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
